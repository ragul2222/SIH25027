# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ayurveda-traceability
NODE_ENV=development
PORT=4001

# Blockchain API Configuration
BLOCKCHAIN_API_URL=http://localhost:3000
BLOCKCHAIN_API_KEY=your-blockchain-api-key-here
BLOCKCHAIN_NETWORK=herb-traceability-network

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRY=24h

# Twilio SMS Gateway
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# External Services
CONSUMER_APP_URL=https://herb-trace.app
IPFS_API_URL=https://ipfs.infura.io:5001
QR_CODE_BASE_URL=https://api.qrserver.com/v1/create-qr-code

# Application Settings
APP_NAME=Ayurveda Traceability System
APP_VERSION=1.0.0
LOG_LEVEL=info

# File Upload Settings
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Cache Settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Development Settings
DEBUG=true
ENABLE_CORS=true
API_RATE_LIMIT=100